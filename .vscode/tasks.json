{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build firmware",
        "type": "shell",
        "command": "make all",
        "osx": {
          "options": {
            "env": {
              "PATH": "${env:PATH}"
            }
          }
        },
        "linux": {
          "options": {
            "env": {
              "PATH": "${env:PATH}"
            }
          }
        },
        "windows": {
          "options": {
            "env": {
              "PATH": "${env:PATH}"
            }
          }
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": "$gcc"
      },
      {
        "label": "clean firmware",
        "type": "shell",
        "command": "make clean distclean",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": "$gcc"
      },
      {
        "label": "upload firmware",
        "type": "shell",
        "command": "make upload",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": "$gcc"
      }

    ]
  }